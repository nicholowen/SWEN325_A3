<Page loaded="loaded" actionBarHidden="true">
    <StackLayout orientation="vertical" tap="clearTextfieldFocus">
    <Label class="nameLabel" text="hello"></Label>
    <Image src="~/images/logo-medium.png" stretch="none" horizontalAlignment="center" />
    <TextField hint="Email"
            keyboardType="email"
            autocorrect="false"
            autocapitalization="none" 
            id="emailField"
            />
    <TextField hint="Password"
            secure="true" 
            id="passwordField"/>
    <Button text="Sign In" tap="signIn"/>
    <Button text="Sign Up" tap="signUp"/>
    </StackLayout>
</Page>

